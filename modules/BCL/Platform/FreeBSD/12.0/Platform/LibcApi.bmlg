		public static SystemError getdents( int& readen, DirectoryHandle p0, dirent* p1, int p2 ) {
			readen = getdents( p0, ( sbyte* ) p1, p2 );
			if( readen < 0 ) {
				readen = 0;
				return LastError;
			}

			return SystemError.None;
