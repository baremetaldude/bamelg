	public partial struct timeval : IFormattable {
		public static readonly thistype Zero = new thistype { tv_sec = 0, tv_usec = 0 };
		public static readonly thistype MaxValue = new thistype { tv_sec = int.MaxValue, tv_usec = 999999 };
		public static readonly thistype MinValue = new thistype { tv_sec = int.MinValue, tv_usec = 0 };

		public timeval() { tv_sec = 0; tv_usec = 0; }

		public static thistype UtcNow {
			get {
				thistype result;
				LibcApi.gettimeofday( &result, null );
				return result;
			}
		}

		public static explicit operator thistype( TimeSpan value ) { thistype result; Assert.IsTrue( TryConvert( &result, value ) ); return result; }
		public static explicit operator TimeSpan( thistype value ) { TimeSpan result; Assert.IsTrue( TryConvert( &result, value ) ); return result; }

		public static explicit operator thistype( TimeDuration value ) { thistype result; Assert.IsTrue( TryConvert( &result, value ) ); return result; }
		public static explicit operator TimeDuration( thistype value ) { TimeDuration result; Assert.IsTrue( TryConvert( &result, value ) ); return result; }

		public static explicit operator thistype( DateTime value ) { thistype result; Assert.IsTrue( TryConvert( &result, value ) ); return result; }
		public static explicit operator DateTime( thistype value ) { DateTime result; Assert.IsTrue( TryConvert( &result, value ) ); return result; }

		public static explicit operator thistype( DateTimeUTC value ) { thistype result; Assert.IsTrue( TryConvert( &result, value ) ); return result; }
		public static explicit operator DateTimeUTC( thistype value ) { DateTimeUTC result; Assert.IsTrue( TryConvert( &result, value ) ); return result; }

		public long TimeSpanTicks { get { EnsureNormalized(); return tv_sec * 10000000L + ( uint ) tv_usec * 10U; } }
		public ulong TimeDurationTicks { get { EnsureNormalized(); return tv_sec >= 0 ? ( uint ) tv_sec * 10000000UL + ( uint ) tv_usec * 10U : ( ulong )( ( long ) tv_sec * -10000000L ) - ( uint ) tv_usec * 10U; } }
		public ulong DateTimeTicks { get { EnsureNormalized(); return ( ulong ) TimeSpanTicks + TimeDuration.Ticks_1970_1_1; } }

		public long TotalSeconds { get { EnsureNormalized(); return tv_sec; } }
		public long TotalMilliseconds { get { EnsureNormalized(); return tv_sec * 1000L + ( int )( ( uint ) tv_usec / 1000UL ); } }

		public static thistype FromMilliseconds( uint value ) {
			return new thistype {
				tv_sec = ( int )( value / 1000U ),
				tv_usec = ( int )( value % 1000U * 1000U )
			};
		}

		public static thistype FromSeconds( uint value ) {
			if( value > ( uint ) int.MaxValue ) return MaxValue;

			return new thistype {
				tv_sec = ( int ) value,
				tv_usec = 0
			};
		}

		public static thistype FromSeconds( ulong value ) {
			if( value > ( ulong ) int.MaxValue ) return MaxValue;

			return new thistype {
				tv_sec = ( int ) value,
				tv_usec = 0
			};
		}

		public static thistype FromSeconds( int value ) {
			return new thistype {
				tv_sec = value,
				tv_usec = 0
			};
		}

		public static thistype FromSeconds( long value ) {
			if( value > int.MaxValue ) return MaxValue;
			if( value < int.MinValue ) return MinValue;

			return new thistype {
				tv_sec = ( int ) value,
				tv_usec = 0
			};
		}

		public static Convert.ConversionResult TryConvert( thistype* result, TimeSpan value ) {
			if( value.Ticks >= 21474836479999990 ) { *result = MaxValue; return Convert.ConversionResult.Clamped; }
			if( value.Ticks <= -21474836480000000 ) { *result = MinValue; return Convert.ConversionResult.Clamped; }

			result->tv_sec = ( int ) value.TotalSeconds;
			result->tv_usec = ( int )( ( value.Ticks / 10 ) % 1000000 );

			if( result->tv_usec < 0 ) {
				result->tv_usec += 1000000;
				if( checkwrap( --result->tv_sec ) ) { *result = MinValue; return Convert.ConversionResult.Clamped; }
			}

			return Convert.ConversionResult.OK;
		}

		public static Convert.ConversionResult TryConvert( thistype* result, TimeDuration value ) {
			if( value.Ticks >= 21474836479999990 ) { *result = MaxValue; return Convert.ConversionResult.Clamped; }

			result->tv_sec = ( int ) value.TotalSeconds;
			result->tv_usec = ( int )( ( value.Ticks / 10U ) % 1000000U );
			result->EnsureNormalized();

			return Convert.ConversionResult.OK;
		}

		public static Convert.ConversionResult TryConvert( thistype* result, DateTime time ) {
			var ticks = time.Ticks;
			if( ticks >= 642830804479999990 ) { *result = MaxValue; return Convert.ConversionResult.Clamped; }
			if( ticks <= 599881131520000000 ) { *result = MinValue; return Convert.ConversionResult.Clamped; }

			result->tv_sec = ( int )( ticks / TimeSpan.TicksPerSecond - TimeSpan.Ticks_1970_1_1 / TimeSpan.TicksPerSecond );
			result->tv_usec = ( int )( result->tv_sec >= 0 ? ( uint )( ticks % TimeSpan.TicksPerSecond ) / TimeDuration.TicksPerMicrosecond : ( uint )( ( ticks + 9 ) % TimeSpan.TicksPerSecond ) / TimeDuration.TicksPerMicrosecond );
			result->EnsureNormalized();

			return Convert.ConversionResult.OK;
		}

		public static Convert.ConversionResult TryConvert( thistype* result, DateTimeUTC time ) {
			var ticks = time.Ticks;
			if( ticks >= 642830804479999990 ) { *result = MaxValue; return Convert.ConversionResult.Clamped; }
			if( ticks <= 599881131520000000 ) { *result = MinValue; return Convert.ConversionResult.Clamped; }

			result->tv_sec = ( int )( ticks / TimeDuration.TicksPerSecond - TimeDuration.Ticks_1970_1_1 / TimeDuration.TicksPerSecond );
			result->tv_usec = ( int )( result->tv_sec >= 0 ? ( uint )( ticks % TimeDuration.TicksPerSecond ) / TimeDuration.TicksPerMicrosecond : ( uint )( ( ticks + 9 ) % TimeDuration.TicksPerSecond ) / TimeDuration.TicksPerMicrosecond );
			result->EnsureNormalized();

			return Convert.ConversionResult.OK;
		}

		public static Convert.ConversionResult TryConvert( TimeSpan* result, thistype value ) {
			value.EnsureNormalized();

			result->Ticks = value.TimeSpanTicks;
			return Convert.ConversionResult.OK;
		}

		public static Convert.ConversionResult TryConvert( TimeDuration* result, thistype value ) {
			value.EnsureNormalized();

			result->Ticks = value.TimeDurationTicks;
			return Convert.ConversionResult.OK;
		}

		public static Convert.ConversionResult TryConvert( DateTime* result, thistype value ) {
			value.EnsureNormalized();

			*result = new DateTime( ( long ) value.DateTimeTicks, DateTimeKind.Utc );
			return Convert.ConversionResult.OK;
		}

		public static Convert.ConversionResult TryConvert( DateTimeUTC* result, thistype value ) {
			value.EnsureNormalized();

			result->Ticks = value.DateTimeTicks;
			return Convert.ConversionResult.OK;
		}

		public Convert.ConversionResult Normalize() {
			while( tv_usec >= 1000000 ) {
				tv_usec -= 1000000;
				if( checkwrap( ++tv_sec ) ) { this = MaxValue; return Convert.ConversionResult.Clamped; }
			}

			while( tv_usec < 0 ) {
				tv_usec += 1000000;
				if( checkwrap( --tv_sec ) ) { this = MinValue; return Convert.ConversionResult.Clamped; }
			}

