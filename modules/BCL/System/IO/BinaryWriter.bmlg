		public void WriteValues( short* value, int count ) {
			if( !CompilerInfo.BigEndian )
				BaseStream.Write( value, ( int )( sizeof( value[0] ) * count ) );
			else
				for( int i = 0; i < count; ++i )
					Write( value[i] );
		}

