		public static byte GetFormattedLength( ulong value ) {
			if( value <= 999999999 ) {
				if( value <= 9999 ) {
					if( value <= 99 ) {
						if( value <= 9 ) return 1;
						return 2;
					}
					else {
						if( value <= 999 ) return 3;
						return 4;
					}
				}
				else {
					if( value <= 999999 ) {
						if( value <= 99999 ) return 5;
						return 6;
					}
					else {
						if( value <= 99999999 ) {
							if( value <= 9999999 ) return 7;
							return 8;
						}
						else {
							return 9;
						}
					}
				}
			}
			else {
				if( value <= 99999999999999 ) {
					if( value <= 999999999999 ) {
						if( value <= 9999999999 ) return 10;
						if( value <= 99999999999 ) return 11;
						return 12;
					}
					else {
						if( value <= 9999999999999 ) return 13;
						return 14;
					}
				}
				else {
					if( value <= 99999999999999999 ) {
						if( value <= 999999999999999 ) return 15;
						if( value <= 9999999999999999 ) return 16;
						return 17;
					}
					else {
						if( value <= 9999999999999999999 ) {
							if( value <= 999999999999999999 ) return 18;
							return 19;
						}
						else {
							return 20;
						}
					}
				}
			}
		}

