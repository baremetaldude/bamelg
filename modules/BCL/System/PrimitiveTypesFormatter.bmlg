				if( value <= 999 ) {
					if( value <= 9 ) return 1;
					if( value <= 99 ) return 2;

					return 3;
				}

				if( value <= 9999 ) return 4;
				return 5;
			}

			if( value <= 99999999 ) {
				if( value <= 999999 ) return 6;
