			public Utf8String ToUtf8String() { return Utf8String.FromSBCS( Buffer ); }
			public Utf16String ToUtf16String() { return Utf16String.FromSBCS( Buffer ); }
			public Utf32String ToUtf32String() { return Utf32String.FromSBCS( Buffer ); }

