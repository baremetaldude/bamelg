				_defPrecision = defPrecision;
				_positive = value >= 0;

				if( _specifier == 'X' ) {
					InitHex( ( ulong ) value );
					return;
				}

				if( _specifier == 'B' ) {
					InitBinary( ( ulong ) value );
					return;
