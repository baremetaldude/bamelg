		private static void FormatMemoryImpl<T>( byte[16]& table, T* result, void* data, uintptr length ) {
			var bytes = ( byte* ) data;

			for( uint i = 0, j = 0; j < length; ++j, i += 2 ) {
				result[i] = ( T ) table[bytes[j] >> 4];
				result[i + 1] = ( T ) table[bytes[j] & 15];
			}
		}

