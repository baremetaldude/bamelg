		public static void FormatTimeSpan( StringBuilder builder, TimeSpan value, string format ) {
			switch( format ) {
				case "c":
				case "":
				case null:
					FormatTime_C( builder, value );
					break;

				case "q":
					FormatTime_q( builder, value );
					break;

				case "Q":
					FormatTime_Q( builder, value );
					break;

				case "x": builder.Append( value.Ticks, "x16" ); break;
				case "X": builder.Append( value.Ticks, "X16" ); break;

				default: builder.AppendFormat( "Invalid format specified '{0}'", format ); break;
			}
		}

