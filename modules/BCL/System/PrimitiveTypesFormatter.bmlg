		private static void FormatTime_Q( StringBuilder builder, TimeDuration value ) {
			var days = value.Days;
			if( days != 0 ) {
				builder.Append( days );
				builder.Append( '.' );
			}

			builder.Append( value.Hours, "D2" );
			builder.Append( ':' );
			builder.Append( value.Minutes, "D2" );
			builder.Append( ':' );
			builder.Append( value.Seconds, "D2" );

			var fraction = ( uint )( value.Ticks % 10000000U );
			if( fraction == 0 ) return;

			if( ( fraction % 1000000U ) == 0 ) {
				builder.Append( '.' );
				builder.Append( fraction / 1000000, "D1" );
			}
			else if( ( fraction % 100000U ) == 0 ) {
				builder.Append( '.' );
				builder.Append( fraction / 100000, "D2" );
			}
			else if( ( fraction % 10000U ) == 0 ) {
				builder.Append( '.' );
				builder.Append( fraction / 10000, "D3" );
			}
			else if( ( fraction % 1000U ) == 0 ) {
				builder.Append( '.' );
				builder.Append( fraction / 1000, "D4" );
			}
			else if( ( fraction % 100U ) == 0 ) {
				builder.Append( '.' );
				builder.Append( fraction / 100, "D5" );
			}
			else if( ( fraction % 10U ) == 0 ) {
				builder.Append( '.' );
				builder.Append( fraction / 10, "D6" );
			}
			else {
				builder.Append( '.' );
				builder.Append( fraction, "D7" );
			}
		}

