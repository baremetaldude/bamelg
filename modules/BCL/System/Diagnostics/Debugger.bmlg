namespace System.Diagnostics {
	public static partial struct Debugger {
		public static void TryBreak() {
			if( IsAttached ) Break();
		}

		public static void Break() asm {
			X86_32 {
				nop
				icebp
				ret
			}
			X86_64 {
				nop
				icebp
				ret
			}
			default {
				_implBreak();
			}
		}

		public static bool IsAttached {
			get {
				return _isAttached();
			}
		}
	}
}