namespace System.Collections {
	public static struct BinaryTreeCommon {
		public static uint GetCenter( uint count ) {
			if( count <= 1 ) return 0;
			var index = BitOperations.NextPowerOf2( count );
			return Math.Min( index / 2 - 1, count - index / 4 );
		}
	}
}