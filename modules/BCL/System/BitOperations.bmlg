		[ForceInline]
		public static uint NextPowerOf2( uint x ) {
			x |= x >> 1;
			x |= x >> 2;
			x |= x >> 4;
			x |= x >> 8;
			x |= x >> 16;

			return x + 1;
		}

		[ForceInline]
