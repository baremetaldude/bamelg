		[ForceInline]
		public static bool ComputeParity( sbyte x ) { return ComputeParity( bitcast<byte>( x ) ); }

		[ForceInline]
		public static bool ComputeParity( byte x ) {
			x ^= x >> 4;
			return ( bool )( ( 0x6996 >> ( x & 0xF ) ) & 1 );
		}

