			x |= x >> 1;
			x |= x >> 2;
			x |= x >> 4;
			x |= x >> 8;
			x |= x >> 16;
			x |= x >> 32;

			return x + 1;
		}

		[ForceInline]
		public static byte NextPermutation( byte x ) {
			var t = x | ( x - 1 );
			return ( t + 1 ) | ( ( ( ~t & ( t + 1 ) ) - 1 ) >> ( CountTrailingZeros( x ) + 1 ) );
		}

