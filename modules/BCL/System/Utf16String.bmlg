				limitChars = CString.ComputeLength( memory );

			var result = new Utf16String( limitChars );
			var chars = result.GetChars();

			Encoding.GetChars( codePage, chars, limitChars, memory, limitChars );

			result.UpdateHash();
			return result;
		}

