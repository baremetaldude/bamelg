		public string ToLower() {
			var chars = GetChars();

			for( uint i = 0; i < Length; ++i ) {
				if( chars[i].IsUpper ) {
					var result = new string( Length );
					var resultChars = result.GetChars();

					Memory.Copy( resultChars, chars, i * sizeof( chars[i] ) );
					for( ; i < Length; ++i )
						resultChars[i] = char.ToLower( chars[i] );

					result.UpdateHash();
					return result;
				}
			}

			return this;
		}

