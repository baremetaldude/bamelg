		public class HttpStatisticTextPageHandler : PageHandler {
			public HttpStatisticTextPageHandler( SessionHandler session )
				: base( session ) {
				MediaType = System.Net.Mime.MediaTypeNames.Text.Plain;
				TextEncodingKind = System.Text.TextEncodingKind.Utf8;
			}

			public override void OnRender() {
				var stats = Session.Server.GetStats();

				Response.Append( ( string ) memberinfo( ServerStats.ValidRequestCount ).Name ); Response.Append( '=' ); Response.Append( stats.ValidRequestCount ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.InvalidRequestCount ).Name ); Response.Append( '=' ); Response.Append( stats.InvalidRequestCount ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.CachedHeaderBuilders ).Name ); Response.Append( '=' ); Response.Append( stats.CachedHeaderBuilders ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.CachedResponseBuilders ).Name ); Response.Append( '=' ); Response.Append( stats.CachedResponseBuilders ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.ActiveSessionCount ).Name ); Response.Append( '=' ); Response.Append( stats.ActiveSessionCount ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.TotalAcceptedClientCount ).Name ); Response.Append( '=' ); Response.Append( stats.TotalAcceptedClientCount ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.ReusePort ).Name ); Response.Append( '=' ); Response.Append( stats.ReusePort ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.DefferedAccept ).Name ); Response.Append( '=' ); Response.Append( stats.ReusePort ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.ListenBacklog ).Name ); Response.Append( '=' ); Response.Append( stats.ListenBacklog ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.ClientFiberStackPages ).Name ); Response.Append( '=' ); Response.Append( stats.ClientFiberStackPages ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.MaxClientRequestLength ).Name ); Response.Append( '=' ); Response.Append( stats.MaxClientRequestLength ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.ResponseBufferLength ).Name ); Response.Append( '=' ); Response.Append( stats.ResponseBufferLength ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.MaxSessions ).Name ); Response.Append( '=' ); Response.Append( stats.MaxSessions ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.PeakActiveSessionCount ).Name ); Response.Append( '=' ); Response.Append( stats.PeakActiveSessionCount ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.ActiveHandlerCount ).Name ); Response.Append( '=' ); Response.Append( stats.ActiveHandlerCount ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.PeakHandlerCount ).Name ); Response.Append( '=' ); Response.Append( stats.PeakHandlerCount ); Response.AppendLine();
				Response.Append( ( string ) memberinfo( ServerStats.FiberCount ).Name ); Response.Append( '=' ); Response.Append( stats.FiberCount ); Response.AppendLine();
			}

			protected override void AddCustomHeaders() {
				AddHeaderContentType( MediaType );
			}
